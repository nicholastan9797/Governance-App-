{
    "name": "@senate/refresher",
    "version": "1.0.0",
    "description": "This service takes care of keeping proposals and votes up to date",
    "author": "Senate",
    "private": true,
    "license": "MIT",
    "type": "module",
    "main": "./dist/index",
    "typings": "./dist/index",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/**"
    ],
    "scripts": {
        "build": "tsup",
        "build:refresher": "tsup",
        "start": "node --expose-gc --max-old-space-size=256 dist/index",
        "start:refresher": "node --expose-gc --max-old-space-size=256 dist/index",
        "dev": "tsup && node --expose-gc dist/index",
        "dev:refresher": "tsup && node --expose-gc dist/index",
        "clean": "rimraf .turbo node_modules dist",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "prettier": "prettier src --check",
        "prettier:fix": "prettier src --write"
    },
    "dependencies": {
        "@senate/axiom": "*",
        "@senate/config": "*",
        "@senate/database": "*",
        "axios": "^1.3.4",
        "d3-array": "^3.2.3",
        "d3-scale": "^4.0.2",
        "ethers": "^6.2.3",
        "node-schedule": "^2.1.1"
    },
    "devDependencies": {
        "@types/d3-array": "^3.0.4",
        "@types/d3-scale": "^4.0.3",
        "@types/node-schedule": "^2.1.0",
        "tsup": "^6.7.0",
        "typescript": "^5.0.2"
    },
    "packageManager": "yarn@1.22.19"
}
