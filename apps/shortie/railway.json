{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "yarn build:shortie",
    "watchPatterns": ["apps/senate", "packages/**"]
  },
  "deploy": {
    "startCommand": "yarn start:shortie",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
